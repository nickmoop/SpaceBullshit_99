SHIP:
	VARIABLES:
+		ID:
			on galaxy
+		NAME:
			name
+		RACE:
			bonuses
+		MODEL:
			bonuses
+		SIZE:
			size(base number of empty spots)
+		CREW:
			list of crew id
+		POSITION:
			on_galaxy[x,y]
			on_battle[x,y]
+		COURSE:
			on_galaxy[x,y]
			on_battle[direction_x,direction_y]
+		SPOT LIST:
			x,y,hull,gas,object,object_id,object_durability
			OBJECT ON SPOT:
				wall,door,reactor,engine,turret,shield(generator),console
+		STATS:
			speed,maneuverability,shield(front,right,back,left)
?		HOLD:
			trade_good:value,slave_id,object_id:value
+		ITEM:
			for painting/erasing
	METHODS:
		erase():
		paint():
		eraseOnMap():
		paintOnMap():
		showOverall():
